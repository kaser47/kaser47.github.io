@model IEnumerable<string>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="tab-pane" id="maintenance" role="tabpanel" aria-labelledby="deals-tab">
                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Home")'">Home</button>
                    <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Favourites")'">Favourites</button>
                    <p />
                    <p />
                    <p />
<form asp-action="Search" method="get">
    <label>Date Range:</label>
    <input type="date" name="startDate" />
    <input type="date" name="endDate" />

    <label>Log Level:</label>
    <select name="logLevel">
        <option value="">All</option>
        <option value="Information">Information</option>
        <option value="Warning">Warning</option>
        <option value="Error">Error</option>
        <!-- Add more log levels as needed -->
    </select>

    <label>Keyword:</label>
    <input type="text" name="keyword" />

    <button type="submit">Search</button>
</form>

<div>
    <!-- Display filtered logs here -->
    @if (Model != null && Model.Any())
    {
            <table table table-striped table-bordered center>
            <tr>
                <th>Timestamp</th>
                <th>Level</th>
                <th>Message</th>
            </tr>
            @foreach (var log in Model)
            {
                var logParts = log.Split(new[] { " ---- " }, StringSplitOptions.None);
                <tr>
                    <td>@logParts[0]</td>
                    <td>@logParts[1]</td>
                    <td>@logParts[2]</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No logs found.</p>
    }
</div>
            </div>

        </div>

    </div>

</div>